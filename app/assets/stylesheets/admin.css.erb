/*
*= require dataTables/src/demo_table_jui
*= require stylesheets_desktop/jquery-ui
*= require jquery.ui.theme
*/
.ui-widget-header {
    background: url(<%= asset_path 'jquery-ui/ui-bg_highlight-soft_75_cccccc_1x100.png' %>) repeat-x scroll 50% 50% #CCCCCC;
    font-weight: bold;
    border: 1px solid #4297D7;
    color: #FFFFFF;
}
#primary_search_box {
    background: none repeat scroll 0 0 #FFFFFF;
    border-bottom: 1px solid #999999;
    border-right: 1px solid #999999;
    color: #000000;
    font-size: 0.85em;
    margin-top: 0;
}	
h1 {
    font-size: 18px;
}
h1, h2,h3,h4, h5, h6{
	 padding: 15px 0;
	 margin: 0;
}

.orange {
    background: none repeat scroll 0 0 #254117;
    color: #FFFFFF;
}
.button {
    border-radius: 0.5em 0.5em 0.5em 0.5em;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    cursor: pointer;
    display: inline-block;
    font: 12px/100% Arial,Helvetica,sans-serif;
    margin: 0 1px;
    outline: medium none;
    padding: 0.09em 0.35em 0.07em;
    text-align: center;
    text-decoration: none;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
    vertical-align: baseline;
}
p {
    margin-bottom: 15px;
}
.gift_shop a {
    color: #0055CC;
    font-weight: bold;
    text-decoration: none;
}

.gift_shop a:visited {
    color: #511281;
    }
.gift_shop{
	line-height: 18px;
}
.gift_shop h2 {
    font-size: 1em;
}
.gift_shop h2 {
    color: #000000;
    font-weight: bold;
}
.gift_shop h1 {
    color: #000000;
    font-size: 1.3em;
}
.gift_shop h1, h2, h3, h4, h5, h6 {
    font-family: 'Lucida Grande','Trebuchet MS',Arial,Helvetica,sans-serif;
}
table tr th {
    background: url(<%= asset_path 'fade-lite-top.png' %>) repeat-x scroll left top #D5E6EE;
    border: 1px solid #999999;
    color: black;
    font-size: 0.8em;
    padding: 3px 10px;
}
table {
    border-collapse: collapse;}

table tr td {
    border: 1px solid #DDDDDD;
    padding: 7px;
}

.individual_deal, .individual_deal_permalink {
    min-height: 100%;
    overflow: hidden;
    padding-bottom: 5px;
}
.individual_deal .title {
    border-bottom: 1px solid #EEEEEE;
    border-top: 2px solid #AAAAAA;
    padding: 10px 10px 10px 0;
}
.individual_deal_expired {
    opacity: 0.45;
}

.individual_deal a {
    color: #0055CC;
    text-decoration: none;
}

.individual_deal_expired_tag {
    color: red;
    display: inline;
    font-size: 0.85em;
    font-weight: bold;
}
.individual_deal .body {
    font-family: Arial,Tahoma,Helvetica,sans-serif;
    font-size: 12px;
    line-height: 18px;
    min-height: 180px;
}
.individual_deal .body .how_to_get_deal {
    min-height: 100%;
    padding-top: 5px;
}
.individual_deal .body .how_to_get_deal img {
    border: 0 none;
    float: left;
    margin-bottom: 20px;
    margin-right: 30px;
    margin-top: 5px;
}
.individual_deal .body .how_to_get_deal .desc {
    margin-left: 190px;
}

.individual_deal .voting {
    color: #999999;
    float: right;
    font-size: 0.7em;
    padding-bottom: 15px;
}

label {
    color: #666666;
    font-family: 'Lucida Grande',Tahoma,Arial,Helvetica,sans-serif;
    font-size: 0.75em;
    font-weight: normal;
}
.dataTable a, .new_link{
    color: #1B79D2;
}

.dataTable a:visited, .new_link{
    color: #511281;
    font-weight: bold;
    text-decoration: none;
}

.coupon_show_detail{
    padding: 10px;
    margin-left: 5px;
}
.coupon_show_detail span{
    display: block;

}
.coupon_show_detail label{
    width: 200px;
    float: left;
}

.coupon_show_detail span.coupon_desc_value{
    width: 80%;
    padding-left: 200px;
}

#edit_sub_coupon_container{
    background-color: #F2F2F2;
    border-radius: 2px 2px 2px 2px;
    float: left;
    height: auto;
    padding: 20px 0 60px 20px;
    width: 1180px;
}

.coupon_header_text{
    color: #E33B45;
    font-size: 16px;
    font-weight: bold;
    margin: 0 0 15px;
}

.coupon_form_text{
    background-color: #FFFFFF;
    border: 1px solid #ABADB3;
    border-radius: 2px 2px 2px 2px;
    display: block;
    height: 30px;
    margin: 0 0 20px;
    padding-left: 10px;
    width: 350px;
}

#edit_sub_coupon_container form label{
    color: #595959;
    display: block;
    float: left;
    font-size: 16px;
    line-height: 18px;
    padding-top: 8px;
    width: 245px;
}

.coupon_form_text_area{
    background-color: #FFFFFF;
    border: 1px solid #ABADB3;
    border-radius: 2px 2px 2px 2px;
    display: block;
    height: 160px;
    margin-bottom: 20px;
    width: 575px;
    padding-left: 10px;
}

#edit_sub_coupon_container .coupon_checkbox{
    clear: both;
    display: block;
    left: 245px;
    margin: 0 0 22px;
    position: relative;
    top: -17px;
}

#edit_sub_coupon_container .cancel{
    color: #000000;
    display: inline-block;
    font-size: 12px;
    padding: 15px;
    }
    
#edit_sub_coupon_container .cancel a{
    color: #1B79D2;
    font-size: 14px;
    padding-top: 5px;
}